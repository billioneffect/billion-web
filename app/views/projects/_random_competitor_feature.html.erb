<%
    competitor = Project.where(eliminated_at: nil).where.not(id: @project.id).order('random()').first
    competitor ||= Project.order('random()').first
%>

<%= link_to project_path(competitor), class: 'project-competitor-container' do %>
  <section class="project-competitor">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2 project-competitor-content">
          <div class="project-competitor-title">
            Check Out Another <%= t('projects_title', scope: competition_scope) %>
          </div>

          <div class="project-competitor-name">
            <%= competitor.name %>
          </div>
          <div class="project-competitor-blurb">
            <%= competitor.blurb %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
