<section class='landing-section landing-works' id='landing-works'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1>Fuse Beer Fund</h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>
            We need your help to choose our favorite beers and to raise money to buy them!<br />
            Here's how it works:
          </p>
        </div>
      </div>
    </div>

    <div class='row'>

      <% col_class = 'col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2' %>
      <div class='<%= col_class %>'>
        <%= image_tag 'gbh/gbh-pitch.png', class: 'center-block' %>
        <div class='billion-stage text-center'>
          <h2>Review your options</h2>
          <p>
            Scroll down to see the beer choices.
          </p>
        </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'gbh/gbh-vote.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>Vote for your favorite</h2>
          <p>
            See a beer you like? Vote for it by contributing to the beer fund.
            Each dollar you contribute is one vote.
          </p>
        </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'winner.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>New Kegs</h2>
          <p>
            All of the money raised goes to buy the top two most voted beers
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

