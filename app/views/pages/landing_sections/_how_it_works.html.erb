<section class='landing-section landing-works' id='landing-works'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1>Have Your Voice Heard</h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>
            Let us know which <%= t('projects_title', scope: competition_scope) %>
            you think is best
          </p>
        </div>
      </div>
    </div>

    <div class='row'>
      <%
        col_class = 'col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2'
        t_scope = "#{competition_scope}.how_it_works"
      %>

      <div class='<%= col_class %>'>
        <%= image_tag 'gbh/gbh-pitch.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2><%= t('step_1.title', scope: t_scope) %></h2>
          <p><%= t('step_1.content', scope: t_scope) %></p>
        </div>
      </div>

      <div class='<%= col_class %>'>
        <%=image_tag 'gbh/gbh-vote.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2><%= t('step_2.title', scope: t_scope) %></h2>
          <p><%= t('step_2.content', scope: t_scope) %></p>
        </div>
      </div>

      <div class='<%= col_class %>'>
        <%=image_tag 'winner.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2><%= t('step_3.title', scope: t_scope) %></h2>
          <p><%= t('step_3.content', scope: t_scope) %></p>
        </div>
      </div>
    </div>
  </div>
</section>

