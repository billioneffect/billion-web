<section class='landing-section landing-works' id='landing-works'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1>Have Your Voice Heard</h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>Let us know who you think is best</p>
        </div>
      </div>
    </div>

    <div class='row'>

      <% col_class = 'col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2' %>
      <div class='<%= col_class %>'>
        <%= image_tag 'gbh/gbh-pitch.png', class: 'center-block' %>
        <div class='billion-stage text-center'>
          <h2>Watch the pitches</h2>
          <p>
            See the most innovative, sustainable, and impactful
            solutions to our most pressing social issues at the final
            presentation of GiveBackHack. </p> </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'gbh/gbh-vote.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>Vote for your favorite</h2>
          <p>
            While the judges are deliberating, help your favorite teams win the
            People's Choice Award by voting with your dollar, online or at the
            event.
          </p>
        </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'winner.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>People's Choice Award</h2>
          <p>The team that raises the most money wins the People's Choice Award and will receive the Billion Fund, all of the money raised during the event.</p>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12 text-center'>
        <%= link_to 'The Billion Story', story_path, class: 'project-see-all btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</section>

