<% t_scope = "#{competition_scope}.competition_details" %>

<section class='landing-section landing-gbh' id='festival-section'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1><%= t('heading', scope: t_scope) %></h1>

      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>
            <%= t('subheading', scope: t_scope) %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class='container'>
    <div class='row'>
      <div class='col-md-6 gbh-logo'>
        <%= image_tag t('image_path', scope: t_scope) %>
      </div>
      <div class='col-md-6'>
        <div class='festival-step'>
          <% t('sections', scope: t_scope ).each do |section| %>
            <h2><%= section[:title] %></h2>
            <p><%= section[:content] %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
