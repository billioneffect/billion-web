<section id='dates-section' class='landing-section landing-dates'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1>Event Timeline</h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>Here's the plan!</p>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='timeline'>
        <% events = t('timeline.events', scope: competition_scope) %>
        <% events.each do |event| %>
          <div class="col-md-<%= (12 / events.size).to_s %> event-container">
            <div class='timeline-event'>
              <span class='timeline-date'>
                <time datetime='<%= event[:datetime] %>'>
                  <%= event[:human_datetime] %>
                </time>
              </span>

              <h2><%= event[:title] %></h2>
              <p><%= event[:content] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
