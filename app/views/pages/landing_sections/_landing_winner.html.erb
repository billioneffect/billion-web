<section class='landing-section landing-winner' id='landing-winner'>
<div class='container'>
  <div class='landing-section-heading'>
    <h1>Meet the Inaugural Billion Winner</h1>
    <div class='row'>
      <div class='col-md-8 col-md-offset-2'>
        <p class='landing-section-subheading'>The Columbus community has spoken!</p>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='card-container'>
      <div class='col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-6 col-md-4'>
        <%= render partial: 'shared/project_card', locals: { project:  winner, card_type: :winner_large } %>
      </div>
    </div>
  </div>

