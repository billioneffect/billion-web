<section class='landing-masthead'>
  <div class='container'>
    <div class='masthead-content-container'>
      <div class='row'>
        <div class='col-md-12'>
          <div class='tagline animated fadeInUp'>
            <p>
            <span class="large">Choose your favorite ideas at<br/>
              <strong>GiveBackHack Columbus 2016</strong>.
            </span>
            </p>
          </div>

          <div class='scroll-btn animated bounceIn'>
            <a class='btn btn-lg' href='#landing-works'>
              <%= icon('chevron-down') %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render 'pages/landing_sections/how_it_works' %>

<% if @competition.projects.where(eliminated_at: nil).length == 1 %>
  <%= render 'pages/landing_sections/landing_winner' %>
<% else %>
  <% if !@competition.projects.empty? %>
    <%= render 'pages/landing_sections/landing_movements' %>
  <% end %>
  <%= render 'pages/landing_sections/landing_gbh' %>
  <%= render 'pages/landing_sections/landing_dates' %>
<% end %>

<%= render 'pages/landing_sections/landing_join' %>
